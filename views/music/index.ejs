<%- include ('../partials/header.ejs'); -%>
<h1>My Music</h1>

	<% if(authdata != null) { %>
	<a href="/musics/add" class="btn btn-success pull-right">Add Music</a>
	<div>
	<% } %>
	<table class="table table-striped">
	<thead>
			<tr>
				<th>Name</th>
				<th></th>
			</tr>
		</thead>

		<tbody>

		<% for(var i=0;i < musics.length;i++) { %>
				<tr>
					<td><%= musics[i].artist %></td>
					<td><%= musics[i].song %></td>
					<td><img scr="/images/play.png" class="thumbnail" ></td>
					<td>
					<% if(authdata != null){ %>
						<a href="/musics/edit/<%= musics[i].id %>" class="btn btn-default">Edit</a>

						<a data-id="<%= musics[i].id %>" class="btn btn-danger delete-music">Delete</a>
					<% } %>
					</td>
				</tr>
			<% } %>



		</tbody>

	</table>

	</div>

<%- include ('../partials/footer.ejs'); -%>